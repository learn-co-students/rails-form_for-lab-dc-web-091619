<h3>Student Form</h3>

<%= form_for(@student) do |f| %>
  <!-- puts everything within @post, like in rake schema table creation -->
  <label>Student first name:</label><br>
  <%= f.text_field :first_name %><br>
  <!-- replaces text_field_tag and the need for a , @post.title source -->

  <label>Student last name</label><br>
  <%= f.text_area :last_name %><br>


  <%= f.submit %>
<% end %>