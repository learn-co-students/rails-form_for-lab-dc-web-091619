<h3>School Classes Form</h3>

<%= form_for(@school_class) do |f| %>
  <!-- puts everything within @post, like in rake schema table creation -->
  <label>School Class title:</label><br>
  <%= f.text_field :title %><br>
  <!-- replaces text_field_tag and the need for a , @post.title source -->

  <label>Room Number</label><br>
  <%= f.text_area :room_number %><br>


  <%= f.submit %>
<% end %>